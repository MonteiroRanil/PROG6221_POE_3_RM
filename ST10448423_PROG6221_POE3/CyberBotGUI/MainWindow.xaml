<Window x:Class="CyberBotGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberBot" Height="450" Width="800">
    <Grid Background="#1e1e1e">
        <TextBlock Text="Cybersecurity Awareness Bot" 
                   Foreground="LightGreen" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <TextBox Name="UserInputBox" Height="30" VerticalAlignment="Bottom" Margin="10,0,150,10"/>
        <Button Name="SendButton" Content="Send" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,30,10" Click="SendButton_Click"/>
        <Button Name="MiniGameButton" Content="Play Quiz" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,140,10" Click="MiniGameButton_Click"/>

        <ScrollViewer Margin="10,60,10,50">
            <TextBlock Name="ChatDisplay" Foreground="White" TextWrapping="Wrap" FontSize="14"/>
        </ScrollViewer>
    </Grid>
</Window>